        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar>
                <content>
                    <ToolbarSpacer/>
                    <Button text="{i18n>save}" type="Emphasized" press="onSavePR"/>
                    <Button text="{i18n>cancel}" type="Transparent" press="onCancelEditPR"/>
